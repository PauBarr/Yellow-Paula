<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.org/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.yellow.Ingrediente" table="ingredientes">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>

        <property name="nombre" column="nombre_ingrediente" not-null="true"/> <property name="tipoPesoLt" column="unidad_de_compra"/>
        <property name="cantidadDeCompra" column="cantidad_de_compra"/>
        <property name="costoDeCompra" column="costo_de_compra"/>
    </class>
</hibernate-mapping>